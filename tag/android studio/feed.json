ment4 = <span class=\"hljs-keyword\">new</span> <span class=\"hljs-title class_\">Fragment4</span>();<br>        fm = getSupportFragmentManager();<br><br>        linearLayout1 = findViewById(R.id.chat);<br>        linearLayout2 = findViewById(R.id.friend);<br>        linearLayout3 = findViewById(R.id.finding);<br>        linearLayout4 = findViewById(R.id.setting);<br><br>        initial();<br>        fragmenthide();<br>        fragmentshow(fragment1);<br>        linearLayout1.setOnClickListener(<span class=\"hljs-built_in\">this</span>);<br>        linearLayout2.setOnClickListener(<span class=\"hljs-built_in\">this</span>);<br>        linearLayout3.setOnClickListener(<span class=\"hljs-built_in\">this</span>);<br>        linearLayout4.setOnClickListener(<span class=\"hljs-built_in\">this</span>);<br>    &#125;<br><br>    <span class=\"hljs-keyword\">private</span> <span class=\"hljs-keyword\">void</span> <span class=\"hljs-title function_\">fragmenthide</span><span class=\"hljs-params\">()</span> &#123;<br>        <span class=\"hljs-type\">FragmentTransaction</span> <span class=\"hljs-variable\">ft</span> <span class=\"hljs-operator\">=</span> fm.beginTransaction()<br>                .hide(fragment1)<br>                .hide(fragment2)<br>                .hide(fragment3)<br>                .hide(fragment4);<br>        ft.commit();<br>    &#125;<br><br>    <span class=\"hljs-keyword\">public</span> <span class=\"hljs-keyword\">void</span> <span class=\"hljs-title function_\">initial</span><span class=\"hljs-params\">()</span> &#123;<br>        <span class=\"hljs-type\">FragmentTransaction</span> <span class=\"hljs-variable\">ft</span> <span class=\"hljs-operator\">=</span> fm.beginTransaction()<br>                .add(R.id.content,fragment1)<br>                .add(R.id.content,fragment2)<br>                .add(R.id.content,fragment3)<br>                .add(R.id.content,fragment4);<br>        ft.commit();<br><br>    &#125;<br><br>    <span class=\"hljs-meta\">@Override</span><br>    <span class=\"hljs-keyword\">public</span> <span class=\"hljs-keyword\">void</span> <span class=\"hljs-title function_\">onClick</span><span class=\"hljs-params\">(View view)</span> &#123;<br>        fragmenthide();<br>        <span class=\"hljs-keyword\">if</span> (view.getId()==R.id.chat)&#123;<br>            fragmentshow(fragment1);<br>        &#125;<span class=\"hljs-keyword\">else</span> <span class=\"hljs-keyword\">if</span> (view.getId()==R.id.friend)&#123;<br>            fragmentshow(fragment2);<br>        &#125;<span class=\"hljs-keyword\">else</span> <span class=\"hljs-keyword\">if</span> (view.getId()==R.id.finding)&#123;<br>            fragmentshow(fragment3);<br>        &#125;<span class=\"hljs-keyword\">else</span> <span class=\"hljs-keyword\">if</span>(view.getId()==R.id.setting)&#123;<br>            fragmentshow(fragment4);<br>        &#125;<br>    &#125;<br><br>    <span class=\"hljs-keyword\">public</span> <span class=\"hljs-keyword\">void</span> <span class=\"hljs-title function_\">fragmentshow</span><span class=\"hljs-params\">(Fragment fragment)</span> &#123;<br><br>        <span class=\"hljs-type\">FragmentTransaction</span> <span class=\"hljs-variable\">transaction</span> <span class=\"hljs-operator\">=</span> fm.beginTransaction()<br>                .show(fragment);<br>        transaction.commit();<br>    &#125;<br>&#125;<br></code></pre></td></tr></table></figure>\n<h2 id=\"结果展示\"><a class=\"markdownIt-Anchor\" href=\"#结果展示\">#</a> 结果展示</h2>\n<p><img data-src=\"https://s2.loli.net/2023/10/08/uKSk3gtTJmhvXy6.png\" alt=\"图片.png\"></p>\n<p><img data-src=\"https://s2.loli.net/2023/10/08/lixAsTjGmvkqapn.png\" alt=\"1f3874fcf12584bd84e39bfab79852f.png\"></p>\n<p><img data-src=\"https://s2.loli.net/2023/10/08/zI3yDwFsZU29a8E.png\" alt=\"eaf05344cd676740a412fb33fa42cd1.png\"></p>\n<p><img data-src=\"https://s2.loli.net/2023/10/08/PZQrOxfcE2oaXJh.png\" alt=\"1a012628e7c150e522ba4a29e4d6404.png\"></p>\n<h2 id=\"总结\"><a class=\"markd